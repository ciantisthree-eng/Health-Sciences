            { q: "In a $\\text{Colloidal suspension}$, the particles are described as:", a: "Remaining suspended within the fluid", choices: ["Settling out quickly", "Remaining suspended within the fluid", "Chemically reacting with the solvent", "Forming $\\text{ATP}$"], correct: "Remaining suspended within the fluid" },
            { q: "When a weak acid, like $\\text{Carbonic acid}$, is formed, it indicates that water has acted as a:", a: "Chemical reactant", choices: ["Buffer", "Catalyst", "Chemical reactant", "Solute"], correct: "Chemical reactant" },
            { q: "What happens to the chromosomes during $\\text{Metaphase}$ of $\\text{Mitosis}$?", a: "They line up along the cell's equator", choices: ["They condense from chromatin", "They line up along the cell's equator", "They are pulled to opposite poles", "The nuclear envelope reforms"], correct: "They line up along the cell's equator" },
            { q: "The main source of energy that $\\text{ATP}$ transfers to the cells is derived from the breakdown of:", a: "Food (e.g., Glucose)", choices: ["Water", "$\text{DNA}$", "Food (e.g., Glucose)", "Electrolytes"], correct: "Food (e.g., Glucose)" },
        ];

        let currentQuestionIndex = 0;
        let score = 0;
        let isAnswered = false;

        const startScreen = document.getElementById('start-screen');
        const questionContainer = document.getElementById('question-container');
        const scoreScreen = document.getElementById('score-screen');
        const questionNumberEl = document.getElementById('question-number');
        const questionTextEl = document.getElementById('question-text');
        const answersListEl = document.getElementById('answers-list');
        const feedbackEl = document.getElementById('feedback');
        const finalScoreEl = document.getElementById('final-score');

        // Function to shuffle an array (Fisher-Yates)
        function shuffle(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        // Shuffle all questions once when the script loads
        const shuffledQuizData = shuffle(quizData);

        function startQuiz() {
            startScreen.classList.add('hidden');
            questionContainer.classList.remove('hidden');
            loadQuestion();
        }

        function loadQuestion() {
            if (currentQuestionIndex >= shuffledQuizData.length) {
                showScore();
                return;
            }

            isAnswered = false;
            feedbackEl.innerHTML = '';
            answersListEl.innerHTML = '';

            const data = shuffledQuizData[currentQuestionIndex];
            questionNumberEl.textContent = currentQuestionIndex + 1;
            questionTextEl.innerHTML = data.q;

            // Prepare answer choices and shuffle them
            const choices = shuffle([...data.choices]);

            const letterMap = ['A', 'B', 'C', 'D'];

            choices.forEach((choice, index) => {
                const choiceEl = document.createElement('div');
                choiceEl.className = 'answer-choice text-gray-700';
                choiceEl.dataset.answer = choice;
                choiceEl.dataset.letter = letterMap[index];
                choiceEl.innerHTML = `<span class="font-bold mr-4 text-primary-green">${letterMap[index]}.</span> ${choice}`;
                choiceEl.onclick = () => checkAnswer(choiceEl, data.correct);
                answersListEl.appendChild(choiceEl);
            });
        }

        function checkAnswer(selectedElement, correctAnswer) {
            if (isAnswered) return;
            isAnswered = true;

            const selectedAnswer = selectedElement.dataset.answer;
            const allChoices = answersListEl.querySelectorAll('.answer-choice');

            // Disable all choices after selection
            allChoices.forEach(el => el.classList.add('disabled'));

            const feedbackMessage = document.createElement('div');
            feedbackMessage.className = 'feedback-box';

            if (selectedAnswer === correctAnswer) {
                score++;
                selectedElement.classList.add('correct');
                feedbackMessage.classList.add('bg-green-100', 'text-primary-green');
                feedbackMessage.innerHTML = 'âœ… Correct! <span class="text-sm font-normal">Great job!</span>';
            } else {
                selectedElement.classList.add('incorrect');
                feedbackMessage.classList.add('bg-red-100', 'text-red-600');
                feedbackMessage.innerHTML = `âŒ Incorrect â€” the correct answer is <span class="font-bold">${correctAnswer}</span>.`;

                // Highlight the correct answer in green
                allChoices.forEach(el => {
                    if (el.dataset.answer === correctAnswer) {
                        el.classList.add('correct');
                    }
                });
            }

            feedbackEl.appendChild(feedbackMessage);

            // Set a small delay before moving to the next question
            setTimeout(() => {
                currentQuestionIndex++;
                loadQuestion();
            }, 2500); // 2.5 seconds to read feedback
        }

        function showScore() {
            questionContainer.classList.add('hidden');
            scoreScreen.classList.remove('hidden');
            finalScoreEl.textContent = score;
        }

    </script>
</body>
</html>
