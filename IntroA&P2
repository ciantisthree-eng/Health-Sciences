        // --- QUIZ LOGIC ---
        let currentQuestionIndex = 0;
        let score = 0;
        let answered = false;
        
        const startScreen = document.getElementById('startScreen');
        const quizContent = document.getElementById('quizContent');
        const scoreScreen = document.getElementById('scoreScreen');
        const questionCount = document.getElementById('questionCount');
        const currentScore = document.getElementById('currentScore');
        const questionText = document.getElementById('questionText');
        const answersContainer = document.getElementById('answersContainer');
        const feedback = document.getElementById('feedback');
        const nextButton = document.getElementById('nextButton');

        document.getElementById('startButton').addEventListener('click', startQuiz);
        nextButton.addEventListener('click', nextQuestion);

        function startQuiz() {
            startScreen.classList.add('hidden');
            quizContent.classList.remove('hidden');
            renderQuestion();
        }

        function renderQuestion() {
            if (currentQuestionIndex >= questions.length) {
                displayScore();
                return;
            }

            answered = false;
            feedback.innerHTML = '';
            nextButton.disabled = true;
            nextButton.classList.add('opacity-50', 'cursor-not-allowed');

            const qData = questions[currentQuestionIndex];
            const answerChoices = qData.a;
            
            questionCount.textContent = `Question ${currentQuestionIndex + 1}/${questions.length}`;
            currentScore.textContent = `Score: ${score}`;
            questionText.textContent = qData.q;
            answersContainer.innerHTML = ''; // Clear previous answers

            const labelMap = ['A', 'B', 'C', 'D'];

            answerChoices.forEach((choice, index) => {
                const choiceElement = document.createElement('button');
                choiceElement.className = 'answer-choice w-full text-left p-4 rounded-lg bg-gray-50 text-gray-800 font-medium shadow-sm hover:bg-green-50 transition-colors duration-200';
                choiceElement.innerHTML = `<span class="font-bold mr-2">${labelMap[index]}.</span> ${choice}`;
                choiceElement.setAttribute('data-answer', choice);
                choiceElement.addEventListener('click', () => handleAnswerClick(choiceElement, choice, qData.c));
                answersContainer.appendChild(choiceElement);
            });
        }

        function handleAnswerClick(clickedElement, selectedAnswer, correctAnswer) {
            if (answered) return; // Prevent double-clicking
            answered = true;
            
            // Re-enable next button
            nextButton.disabled = false;
            nextButton.classList.remove('opacity-50', 'cursor-not-allowed');

            // Find all buttons to highlight the correct one
            const allChoices = answersContainer.querySelectorAll('.answer-choice');
            let correctElement = null;
            
            allChoices.forEach(choice => {
                if (choice.getAttribute('data-answer') === correctAnswer) {
                    correctElement = choice;
                }
            });

            if (selectedAnswer === correctAnswer) {
                score++;
                currentScore.textContent = `Score: ${score}`;
                clickedElement.classList.add('correct');
                feedback.innerHTML = '<span class="text-green-700">‚úÖ Correct!</span>';
            } else {
                clickedElement.classList.add('incorrect');
                if (correctElement) {
                    correctElement.classList.add('correct'); // Highlight the correct answer
                }
                feedback.innerHTML = `<span class="text-red-600">‚ùå Incorrect</span> ‚Äî the correct answer is: <span class="font-semibold text-green-700">${correctAnswer}</span>.`;
            }

            // Disable all buttons after one is clicked
            allChoices.forEach(choice => choice.classList.add('pointer-events-none'));
        }

        function nextQuestion() {
            currentQuestionIndex++;
            renderQuestion();
            // Scroll to top of the card for the next question
            quizContainer.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function displayScore() {
            quizContent.classList.add('hidden');
            scoreScreen.classList.remove('hidden');
            document.getElementById('finalScore').textContent = `${score} / ${questions.length}`;
        }
    </script>
</body>
</html>
